<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/Pest.php"
         colors="true"
         stopOnFailure="false"
         stopOnError="false"
         stopOnWarning="false"
         stopOnRisky="false"
         stopOnIncomplete="false"
         stopOnSkipped="false">
    <testsuites>
        <testsuite name="Unit">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory>src</directory>
        </include>
        <report>
            <clover outputFile="coverage.xml"/>
        </report>
        <target>85</target>
    </coverage>
</phpunit>
